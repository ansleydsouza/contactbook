{
  "swagger": "2.0",
  "info": {
    "description": "A MERN Stack Contact Book Web Application",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "title": "Contact Book",
    "version": "1.0.0"
  },
  "host": "localhost:4000",
  "basePath": "/",
  "tags": [
    {
      "name": "Contacts",
      "description": "APIs for contacts in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/records": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Get all contacts in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Contact": {
      "required": [
        "contact_name",
        "contact_number",
        "_id"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "contact_name": {
          "type": "string"
        },
        "contact_number": {
          "type": "string"
        }
      }
    }
  }
}